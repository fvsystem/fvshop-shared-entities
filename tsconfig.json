{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "allowJs": true,
    "declaration": true,
    "paths": {
      "@shared/*": [
        "@shared/*"
      ],
      "@shared": [
        "@shared/index.ts"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "noImplicitAny": false,
  },
  "include": [
    "src"
  ]
}